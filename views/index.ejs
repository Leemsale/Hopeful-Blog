<%- include('partials/header.ejs') %>

<main>
    <aside class="side-bar">
        <a href="/" class="<%= isHomePage ? 'active' : '' %>">Home üè†</a>
        <a href="/favorites" class="<%= favorites ? 'active' : '' %>">Favorites <span style="color: red;">‚ù§Ô∏é</span></a>
        <a href="/deleted" class="<%= deleted ? 'active' : '' %>">Deleted üóë</a>
    </aside>
    <div class="posts">
        <% if (isHomePage) { %>
            <div class="pbox">
                <div class="datehead">
                    <div class="date">
                        <p style="font-size: 1.5rem;">Add a new quote</p>
                    </div>
                </div>
                <div class="quote">
                    <form action="/submit" method="POST">
                        <input type="text" name="userPost" placeholder="Share yours with us..."
                            style="outline: none;" class="quote i" required>
                    </form>
                </div>
            </div>
        <% } %>

        <% posts.forEach((post) => { %>
            <div class="pbox">
                <div class="datehead">
                    <div class="date">
                        <p>
                            <%= post.timestamp ? post.timestamp.toLocaleString() : 'Older Post' %>
                        </p>
                    </div>
                    <% if (!deleted) { %>
                        <div class="like">
                            <% if (!favorites) { %>
                                <button
                                    class="like-btn <%= favoritePosts.includes(post.id) ? 'liked' : '' %>"
                                    data-id="<%= post.id %>">
                                    ‚ù§Ô∏é <%= post.likes %>
                                </button>
                            <% } %>
                            <form action="/delete/<%= post.id %>" method="POST">
                                <button type="submit">üóë</button>
                            </form>
                            <form action="/edit/<%= post.id %>" method="GET">
                                <button type="submit">‚úé</button>
                            </form>
                        </div>
                    <% } %>

                    <% if (deleted) { %>
                        <form action="/permanently-delete/<%= post.id %>" method="POST" class="permanent-delete-form">
                            <button type="submit" class="permanent-delete-btn">üóë</button>
                        </form>
                    <% } %>
                </div>
                <div class="quote">
                    <p><%= post.content %></p>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Confirm before permanent deletion
        document.querySelectorAll('.permanent-delete-btn').forEach(button => {
            button.addEventListener('click', function(event) {
                const confirmation = confirm("Are you sure you want to permanently delete this post? This action cannot be undone.");
                if (!confirmation) {
                    event.preventDefault(); // Prevent form submission if user cancels
                }
            });
        });

        // Toggle like button on click
        document.querySelectorAll('.like-btn').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                const postId = this.getAttribute('data-id');
                const isLiked = this.classList.contains('liked');
                const url = isLiked ? `/unlike/${postId}` : `/like/${postId}`;
                fetch(url, { method: 'POST' })
                    .then(response => {
                        if (response.ok) {
                            this.classList.toggle('liked');
                        }
                    });
            });
        });
    });
</script>

<%- include('partials/footer.ejs') %>
